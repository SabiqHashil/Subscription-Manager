# Backend Environment Configuration Template
# Copy this file to .env and fill in your values

# MongoDB Connection
MONGO_URL=mongodb://localhost:27017
DB_NAME=subscription_manager

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Configuration
# Multiple origins separated by comma
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# Application Configuration
DEBUG=True
ADMIN_PASSWORD=mysecurepassword
APP_NAME=Subscription Manager API
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True
